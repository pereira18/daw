extends layout
block content
    .w3-container
        .w3-card-4
            header.w3-container.w3-teal
                h3 Upload de Ficheiros
            .w3-container
                form.w3.container(id="processaForm" method="POST" enctype='multipart/form-data')
                    label
                        b Ficheiro
                    input.w3-input.w3-border.w3-light-grey(id='ficheiro', type="file" name="ficheiro" )
                    label
                        b Descrição
                    input.w3-input.w3-border.w3-light-grey(type="text" name="desc" id='desc')
                    input.w3-input.w3-border.w3-light-grey(id='data' type="hidden" name="data" value= Date())
                    br
                    button.w3-button.w3-teal(id='adicionar') Enviar Ficheiro
                    br
                    hr
                    br
                    header.w3-container.w3-teal
                        h3.w3-center Lista de Ficheiros
                    .w3-container
                         table.w3-table-all(id='ficheiros')     
            footer.w3-container.w3-teal
                adress Gerado por Rodrigo Pereira