extends layout
block content
    .w3-container
        .w3-card-4
            header.w3-container.w3-teal
                h3 Upload de Ficheiros
            .w3-container
                form.w3.container(action="/processaForm" method="POST" enctype='multipart/form-data')
                    label
                        b Ficheiro
                    input.w3-input.w3-border.w3-light-grey(type="file" name="ficheiro")
                    label
                        b Descrição
                    input.w3-input.w3-border.w3-light-grey(type="text" name="desc")
                    input.w3-input.w3-border.w3-light-grey(type="hidden" name="data" value= Date())
                    br
                    input.w3-btn.w3-blue-grey(type="submit" value="Enviar")
                    br
                    hr
                    br
                    header.w3-container.w3-teal
                        h3.w3-center Lista de Ficheiros
                    .w3-container
                        br
                        table.w3-table-all
                            tr  
                                th Nome
                                th Descrição
                                th Data
                            each fi in lista
                                if fi != null
                                    tr
                                        td
                                            a(href='/uploaded/' + fi.nome target="_blank")= fi.nome
                                        td= fi.descricao
                                        td= fi.data    
                        br       
            footer.w3-container.w3-teal
