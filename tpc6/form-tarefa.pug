extends layout
block content 
    .w3-container
        .w3-card-4
            header.w3-container.w3-light-green
                h3 Adicionar Tarefa
            .w3-container
                form.w3-container(action='/processaForm' method='POST')
                    input.w3-input.w3-border.w3(type='hidden' name='id' value = lista.length )
                    label.w3 
                        b Nome da Tarefa
                    input.w3-input.w3-border.w3(type='text' name='nome' required)
                    label.w3
                        b Tipo de Tarefa
                    input.w3-input.w3-border.w3(type='text' name='tipo' required)
                    label.w3 
                        b Data Limite
                    input.w3-input.w3-border.w3(type='date' name='data' required)
                    br
                    input.w3-btn.w3-green(type='submit' value='Enviar')
            footer.w3-container.w3-light-green
                adress Gerado por FormApp: 
                a(href='/') Voltar Á página principal 
                    