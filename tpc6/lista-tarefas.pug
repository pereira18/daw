extends layout
block content 
    .w3-container
        .w3-card-4
            header.w3-container.w3-light-green
                h3 Lista de Tarefas
            .w3-container
                table.w3-table-all
                    tr  
                        th ID
                        th Nome
                        th Tipo
                        th Data
                        th Remover
                    each ta in lista
                        if ta != null
                            tr
                                td= ta.id
                                td= ta.nome
                                td= ta.tipo
                                td= ta.data
                                td 
                                    button.w3-button.w3-red
                                        a(href='/eliminar/'+ta.id) Remover 
                br
            footer.w3-container.w3-light-green
                    button.w3-button.w3-green
                        a(href='/adicionar') Adicionar Uma Tarefa
                    